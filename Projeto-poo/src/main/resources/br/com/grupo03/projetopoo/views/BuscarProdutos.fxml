<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.grupo03.projetopoo.Controller.BuscarProdutosController"
            prefWidth="1185" prefHeight="668"
            style="-fx-background-color: #f8f8fc;">

    <!-- Sidebar -->
    <left>
        <VBox spacing="15" alignment="TOP_LEFT"
              style="-fx-background-color: #1c2541; -fx-padding: 20;">
            <Label text="MERCADINHO" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
            <Button text="Página Inicial" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Estoque" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Carrinho" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Produtos" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Nota Fiscal" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Admin" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Configurações" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Sair" style="-fx-background-color: transparent; -fx-text-fill: white;" />
        </VBox>
    </left>

    <!-- Conteúdo principal -->
    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <Label text="BUSCAR PRODUTOS" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2a2a2a;" />

            <TextField fx:id="campoBusca" promptText="Buscar produtos"
                       style="-fx-background-radius: 20; -fx-padding: 8; -fx-background-color: #f2eef9; -fx-border-color: transparent;"/>

            <TableView fx:id="tabelaProdutos" prefHeight="400" style="-fx-background-color: white; -fx-border-color: #ddd;">
                <columns>
                    <TableColumn fx:id="colCodigo" text="Código" prefWidth="200"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="250"/>
                    <TableColumn fx:id="colMarca" text="Marca" prefWidth="200"/>
                    <TableColumn fx:id="colPreco" text="Preço (R$)" prefWidth="150"/>
                    <TableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button fx:id="btnCarrinho" text="Ir para o carrinho"
                        style="-fx-background-color: #1c2541; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6;"/>
                <Button fx:id="btnVoltar" text="Voltar"
                        style="-fx-background-color: #3a3d5c; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
