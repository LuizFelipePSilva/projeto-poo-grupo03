<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.grupo03.projetopoo.Controller.CarrinhoController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220.0" spacing="10.0" styleClass="side-menu">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="side-menu-title" text="MERCADINHO" />
                <Separator styleClass="separator" />
                <Button maxWidth="Infinity" styleClass="side-menu-button" text="Página Inicial" />
                <Button maxWidth="Infinity" styleClass="side-menu-button" text="Estoque" />
                <Button maxWidth="Infinity" styleClass="side-menu-button" text="Carrinho" />
                <Button maxWidth="Infinity" styleClass="side-menu-button" text="Produtos" />
                <Button maxWidth="Infinity" styleClass="side-menu-button" text="Nota Fiscal" />
                <Button maxWidth="Infinity" styleClass="side-menu-button" text="Admin" />
                <Separator styleClass="separator" />
                <Button maxWidth="Infinity" styleClass="side-menu-button" text="Sair" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="center-content">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label styleClass="screen-title" text="CARRINHO" />
                <TableView fx:id="tabelaCarrinho" prefHeight="400.0">
                    <columns>
                        <TableColumn fx:id="colunaCodigo" prefWidth="150.0" text="Código" />
                        <TableColumn fx:id="colunaNome" prefWidth="250.0" text="Nome" />
                        <TableColumn fx:id="colunaMarca" prefWidth="150.0" text="Marca" />
                        <TableColumn fx:id="colunaPreco" prefWidth="100.0" text="Preço(RS)" />
                        <TableColumn fx:id="colunaQuantidade" prefWidth="120.0" text="Quantidade" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Cupom de Desconto:" />
                        <TextField fx:id="textFieldCupom" promptText="Digite o código do cupom" />
                        <Button onAction="#onAplicarCupomClick" text="Aplicar" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <children>
                        <Button onAction="#voltar" text="Voltar" />
                        <Button onAction="#finalizarCompra" styleClass="primary-button" text="Finalizar Compra" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>