<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.grupo03.projetopoo.Controller.NotaFiscalController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220.0" spacing="10.0" styleClass="side-menu">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="side-menu-title" text="MERCADINHO" />
                <Separator styleClass="separator" />
                <Button onAction="#goToPaginaInicial" maxWidth="Infinity" styleClass="side-menu-button" text="Página Inicial" />
                <Button onAction="#goToEstoque" maxWidth="Infinity" styleClass="side-menu-button" text="Estoque" />
                <Button onAction="#goToCarrinho" maxWidth="Infinity" styleClass="side-menu-button" text="Carrinho" />
                <Button onAction="#goToProdutos" maxWidth="Infinity" styleClass="side-menu-button" text="Produtos" />
                <Button onAction="#goToNotaFiscal" maxWidth="Infinity" styleClass="side-menu-button" text="Nota Fiscal" />
                <Button onAction="#goToAdmin" maxWidth="Infinity" styleClass="side-menu-button" text="Admin" />
                <Separator styleClass="separator" />
                <Button onAction="#sair" maxWidth="Infinity" styleClass="side-menu-button" text="Sair" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="20.0" styleClass="center-content">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label styleClass="screen-title" text="NOTA FISCAL" />
                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="section-title" text="Detalhes do pedido" />
                        <GridPane hgap="40.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <children>
                                <Label text="Enviar para:" />
                                <Label fx:id="labelNomeCliente" text="Nome do Cliente" GridPane.rowIndex="1" />
                                <Label text="Forma de pagamento:" GridPane.columnIndex="1" />
                                <Label fx:id="labelFormaPagamento" text="Forma de Pagamento" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Resumo do pedido:" GridPane.columnIndex="2" />
                                <Label fx:id="labelValorTotalResumo" text="Valor Total" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="section-title" text="Itens do pedido" />
                        <TableView fx:id="tabelaItens" prefHeight="250.0">
                            <columns>
                                <TableColumn fx:id="colunaItemNome" prefWidth="350.0" text="Nome do item" />
                                <TableColumn fx:id="colunaItemQtd" prefWidth="150.0" text="Quantidade" />
                                <TableColumn fx:id="colunaItemValorUnit" prefWidth="150.0" text="Valor unitário" />
                                <TableColumn fx:id="colunaItemValorTotal" prefWidth="150.0" text="Valor Total" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <HBox alignment="CENTER_LEFT" spacing="50.0">
                    <children>
                        <Label fx:id="labelCodigoPedido" text="CÓDIGO DO PEDIDO: 000000" />
                        <Label fx:id="labelTotalItens" text="TOTAL DE ITENS: 0" />
                        <Label fx:id="labelValorTotalCompra" style="-fx-font-weight: bold;" text="VALOR TOTAL DA COMPRA: R$ 0,00" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <Button onAction="#finalizar" styleClass="primary-button" text="Finalizar" />
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>