<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.grupo03.projetopoo.Controller.UserController"
            style="-fx-background-color: #f0f3fa;">

   <top>
      <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #1d284c;">
         <children>
            <Label text="Mercadinho" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="25.0"/>
               </font>
            </Label>
         </children>
      </HBox>
   </top>

   <center>
      <VBox alignment="CENTER" spacing="15.0" prefWidth="400.0" prefHeight="400.0"
            style="-fx-background-color: #c3c8db;" maxWidth="400.0">
         <padding>
            <Insets top="30.0" bottom="30.0" left="40.0" right="40.0"/>
         </padding>
         <children>
            <Label text="Usuário">
               <font>
                  <Font name="System Bold" size="25.0"/>
               </font>
            </Label>
            <TextField fx:id="userLogin" promptText="Digite seu usuário..."/>
            <Label text="Senha">
               <font>
                  <Font name="System Bold" size="25.0"/>
               </font>
            </Label>
            <PasswordField fx:id="passwordLogin" promptText="Digite sua senha..."/>
            <Button text="Login" textFill="WHITE" onAction="#autenticar"
                    style="-fx-background-color: #1d284c;" minWidth="200.0"/>
         </children>
      </VBox>
   </center>

</BorderPane>
